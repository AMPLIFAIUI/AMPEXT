{
  "manifest_version": 3,
  "name": "AMP - Auto Memory Persistence",
  "version": "2.0.1",
  "description": "Infinite context memory system for AI conversations",
  
  "icons": {
    "32": "icon32.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png",
    "256": "icon256.png"
  },
  
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "unlimitedStorage",
    "windows",
    "nativeMessaging",
    "notifications"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "dropdown.html",
    "default_title": "AMP Memory",
    "default_icon": "icon48.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["receiver.js", "utils.js", "amp-ui.html", "animated logo/*"],
      "matches": ["<all_urls>"]
    }
  ],
  

  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
} 