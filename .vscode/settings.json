{
    "files.autoSave": "afterDelay",
    
    // VS Code Speech Configuration - Enhanced for Autonomous Operation
    "accessibility.voice.speechTimeout": 2000,
    "accessibility.voice.autoSynthesize": "on",
    "accessibility.voice.speechRate": "medium",
    "accessibility.voice.speechVolume": "medium",
    
    // Speech to Text Settings - Optimized for Development
    "vscode-speech.language": "en-US",
    "vscode-speech.continuous": true,
    "vscode-speech.interimResults": true,
    "vscode-speech.maxAlternatives": 5,
    "vscode-speech.confidence": 0.7,
    "vscode-speech.grammarBias": ["function", "class", "const", "let", "var", "async", "await", "import", "export"],
    
    // Voice Commands Settings - Enhanced
    "vscode-speech.voiceCommands.enabled": true,
    "vscode-speech.voiceCommands.timeout": 8000,
    "vscode-speech.voiceCommands.wakeWord": "code",
    "vscode-speech.voiceCommands.confirmBeforeAction": false,
    
    // Audio Settings - Professional Quality
    "vscode-speech.audio.echoCancellation": true,
    "vscode-speech.audio.noiseSuppression": true,
    "vscode-speech.audio.autoGainControl": true,
    "vscode-speech.audio.sampleRate": 16000,
    "vscode-speech.audio.channels": 1,
    
    // Privacy and Data - Secure Local Processing
    "vscode-speech.privacy.keepAudioOnDevice": true,
    "vscode-speech.telemetry.enabled": false,
    "vscode-speech.privacy.localProcessing": true,
    
    // Autonomous Operation Settings
    "vscode-speech.autonomous.enabled": true,
    "vscode-speech.autonomous.autoExecute": true,
    "vscode-speech.autonomous.confirmDangerous": true,
    
    // Custom Voice Commands for AMP Project
    "vscode-speech.customCommands": {
        "build amp": "npm run build",
        "start amp": "npm start",
        "test connections": "node test-connections.js",
        "open memory browser": "code desktop-ui/index.html",
        "run native host": "node amp-native-host.js",
                    "show extension": "code ext/",
        "open docs": "code docs/",
        "git status": "git status",
        "git commit": "git add . && git commit -m",
        "open terminal": "Terminal: Create New Terminal"
    },
    
    // AI Integration for Autonomous Work + Permanent Codebase Context
    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "plaintext": true,
        "markdown": true
    },
    "github.copilot.advanced": {
        "length": 500,
        "temperature": 0.1,
        "top_p": 1,
        "inlineSuggestEnable": true
    },
    
    // AMP Project Context - Auto-load codebase context
    "github.copilot.chat.projectContext": {
        "enabled": true,
        "contextFile": ".vscode/codebase-context.json",
                  "autoInclude": [
              "ext/**/*.js",
            "desktop-ui/**/*.js", 
            "*.json",
            "amp-native-host.js",
            "docs/AMP_System_Overview.md",
            "docs/architecture.md"
        ]
    },
    
    "files.associations": {
        "*.mdc": "markdown",
        "codebase-context.json": "jsonc"
    },
    "github.copilot.selectedCompletionModel": "",
    "github.copilot.chat.codeGeneration.useInstructionFiles": true,
    "blackbox.mcp.mode": "full",
    "blackbox.mcpMarketplace.enabled": true
}