[
    {
        "key": "ctrl+shift+v",
        "command": "vscode-speech.start",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+s",
        "command": "vscode-speech.stop"
    },
    {
        "key": "ctrl+shift+d",
        "command": "vscode-speech.dictation.start",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+c",
        "command": "vscode-speech.commands.start"
    },
    {
        "key": "escape",
        "command": "vscode-speech.cancel",
        "when": "speechToTextInProgress"
    }
]
